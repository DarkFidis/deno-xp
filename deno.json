{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window", "es2020"],
    "strict": true
  },
  "lint": {
    "include": ["src/"]
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"]
  },
  "importMap": "import_map.json",
  "lock": false,
  "tasks": {
    "beautify": "deno fmt",
    "build": "deno compile --allow-net src/main/index.ts",
    "dev": "drun",
    "start": "deno run --allow-net src/main/index.ts"
  }
}